<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
    @Scripts.Render("~/scripts/jquery-1.7.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/bundles/jquery")
    <!--стили jquery ui-->
    @Styles.Render("~/Content/themes/base/css")
    <!--сама библиотека jquey ui-->
    @Scripts.Render("~/bundles/jqueryui")

    <script type="text/javascript" src="~/Scripts/jscolor.js"></script>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
   
</head>
<body>
<div id="header">
    <div class="title">
        <div>COSTS CALCULATOR</div>
        <div id="logOut">
            @Html.Partial("UserTitel")
            @Html.ActionLink("Log Out", "Logoff", "Account")
            @Html.ActionLink("Modify User Data", "ModificationUserData", "Account")
        </div>
</div>
</div>
<div id="body">
    <div id="menu">
        <div class="item">@Html.ActionLink("Home","Index","Purchase")</div>
        <div class="item">@Html.ActionLink("Categories", "GetAllCategories", "Category")</div>
        <div class="item">@Html.ActionLink("Purchases", "FirstListPurchases", "Purchase")</div>
    </div>
    <div id="content">
        @RenderBody()
        
        

        @RenderSection("scripts", required: false)
        <!--если браузер не создает специального поля для date, то добавляем datepicker-->
        <script type="text/javascript">
            $(function () {
                if (!Modernizr.inputtypes.date) {
                    $(function () {
                        $("input[type='date']")
                            .datepicker({ dateFormat: 'dd/mm/yy' })
                            .get(0).setAttribute("type", "text");
                    });
                }
            });
        </script>
    </div>
</div>
</body>
</html>


<script>
    function setTextColor(picker) {
        document.getElementsByTagName('body')[0].style.color = '#' + picker.toString();
    }
</script>