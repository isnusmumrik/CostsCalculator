@using CostsCalculator.Models
@model User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Register</h2>


@using (Html.BeginForm("Register", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div>@Html.HiddenFor(x => x.Id)</div>
    <div>@Html.LabelFor(x=>x.Name)</div>
    <div>@Html.EditorFor(x => x.Name)</div>
    <div>@Html.LabelFor(x=>x.Email)</div>
    <div>@Html.EditorFor(x => x.Email)</div>
    <div>@Html.LabelFor(x=>x.Password)</div>
    <div>@Html.EditorFor(x => x.Password)</div>

    <div><input type="submit" value="Register" /></div>
    <div><input type="button" value="Cancel" onclick="Back()"/></div>

}
<script>
    function Back() {
        history.back();
    }
</script>